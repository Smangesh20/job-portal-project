{
  "buildCommand": "ng build --configuration production",
  "outputDirectory": "dist/askyacham-portal",
  "installCommand": "npm install",
  "functions": {
    "api/**/*.ts": {
      "runtime": "@vercel/node@3.2.29"
    }
  },
  "git": {
    "deploymentEnabled": {
      "main": true
    }
  },
  "rewrites": [
    {
      "source": "/api/auth/send-otp",
      "destination": "/api/auth/send-otp.ts"
    },
    {
      "source": "/api/auth/verify-otp",
      "destination": "/api/auth/verify-otp.ts"
    },
    {
      "source": "/api/auth/resend-otp",
      "destination": "/api/auth/resend-otp.ts"
    },
    {
      "source": "/api/auth/google/signup/callback",
      "destination": "/api/auth/google/signup/callback.ts"
    },
    {
      "source": "/api/auth/google/signup",
      "destination": "/api/auth/google/signup.ts"
    },
    {
      "source": "/api/auth/google/signin/callback",
      "destination": "/api/auth/google/signin/callback.ts"
    },
    {
      "source": "/api/auth/google/signin",
      "destination": "/api/auth/google/signin.ts"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization"
        }
      ]
    }
  ],
  "env": {
    "NEXTAUTH_URL": "https://www.askyacham.com"
  }
}
